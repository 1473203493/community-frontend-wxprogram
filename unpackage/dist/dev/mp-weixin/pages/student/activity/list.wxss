
.activity-list-container.data-v-fa9d9dac {
  padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
}

/* 搜索框 */
.search-container.data-v-fa9d9dac {
  padding: 20rpx;
  background-color: #fff;
}
.search-box.data-v-fa9d9dac {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
}
.search-box input.data-v-fa9d9dac {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
}
.placeholder.data-v-fa9d9dac {
  color: #999;
}

/* 筛选条件 */
.filter-container.data-v-fa9d9dac {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}
.filter-group.data-v-fa9d9dac {
  margin-bottom: 20rpx;
}
.filter-label.data-v-fa9d9dac {
  font-size: 28rpx;
  color: #666;
}
.filter-options.data-v-fa9d9dac {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.filter-option.data-v-fa9d9dac {
  padding: 8rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}
.filter-option.active.data-v-fa9d9dac {
  color: #fff;
  background-color: #007aff;
}

/* 活动列表 */
.activity-list.data-v-fa9d9dac {
  background-color: #fff;
}
.activity-item.data-v-fa9d9dac {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  /* 增加点击区域 */
  border: 2rpx solid transparent;
}
.activity-item.data-v-fa9d9dac:active {
  border-color: #007aff;
  background-color: rgba(0, 122, 255, 0.05);
}
.activity-item image.data-v-fa9d9dac {
  width: 200rpx;
  height: 140rpx;
  border-radius: 10rpx;
}
.activity-info.data-v-fa9d9dac {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.activity-title.data-v-fa9d9dac {
  font-size: 30rpx;
  color: #333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.activity-meta.data-v-fa9d9dac {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.activity-time.data-v-fa9d9dac, .activity-location.data-v-fa9d9dac {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #999;
}
.activity-stats.data-v-fa9d9dac {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.stat-item.data-v-fa9d9dac {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty.data-v-fa9d9dac {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty text.data-v-fa9d9dac {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 分页 */
uni-pagination.data-v-fa9d9dac {
  margin: 40rpx 0;
}
